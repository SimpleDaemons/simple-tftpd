{
    "network": {
        "listen_address": "0.0.0.0",
        "listen_port": 69
    },
    
    "filesystem": {
        "root_directory": "/var/tftp"
    },
    
    "security": {
        "read_enabled": true,
        "write_enabled": false
    },
    
    "logging": {
        "level": "INFO",
        "console_logging": true
    }
}
