# Note: INI format support is planned for future releases
# This example shows the equivalent INI structure
# for the JSON configuration format

[network]
listen_address = 0.0.0.0
listen_port = 69
ipv6_enabled = true

[filesystem]
root_directory = /var/tftp
allowed_directories = 

[security]
read_enabled = true
write_enabled = false
max_file_size = 104857600
overwrite_protection = true

[performance]
block_size = 512
timeout = 5
window_size = 1
max_retries = 5

[logging]
level = INFO
log_file = /var/log/simple-tftpd.log
console_logging = true

