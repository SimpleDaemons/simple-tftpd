network:
  listen_address: "127.0.0.1"
  listen_port: 6969
  ipv6_enabled: false

filesystem:
  root_directory: "./tftp-files"
  allowed_directories:
    - "./tftp-files"
    - "./test-files"

security:
  read_enabled: true
  write_enabled: true
  max_file_size: 10485760
  overwrite_protection: false

performance:
  block_size: 512
  timeout: 10
  window_size: 1
  max_retries: 3

logging:
  level: "DEBUG"
  log_file: "./tftp-dev.log"
  console_logging: true

